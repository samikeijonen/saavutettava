<ul class="entry-archive grid grid--blog reset-list alignwide">
	{%- for post in allArticles -%}
		<li class="entry-archive__item">
			<span class="entry__byline">
				{{ icon.calendar | safe }}
				<time class="entry__date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
			</span>
			<h2 class="entry-archive__title h4"><a class="entry-archive__anchor" href="/{{ post.date | dateForSlug }}/{{ post.slug }}" class="postlist-link">{% if post.title.rendered %}{{ post.title.rendered }}{% else %}{{ post.slug }}{% endif %}</a></h2>
		</li>
	{%- endfor -%}
</ul>
