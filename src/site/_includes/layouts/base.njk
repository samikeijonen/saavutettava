<!doctype html>
<html lang="fi">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% bundledCss %}
		<title>{{ title }} - {{ site.title }}</title>

		{% if title %}
			<meta name="description" content="{{ title }}" />
			<meta name="twitter:description" content="{{ title }}" />
			<meta property="og:description" content="{{ title }}" />
		{% endif %}
	</head>
	<body>
		<div class="site mx-auto max-w-2xl">
			<header class="site-header py-2 has-grey-900-background-color">
				<a class="skip-link screen-reader-text" href="#main">Hyppää sisältöön</a>
				<div class="site-header__wrapper px-2 has-white-color">
					<p class="site-header__title has-text-align-center h3 font-sans mb-0"><a class="has-white-color no-underline focus-inherit uppercase tracking-md f-w-800" href="/">{{ site.title }}</a></p>
					<p class="site-header__desc has-text-align-center mb-0">{{ site.shortDesc }}</p>
				</div>

				{% include "components/nav.njk" %}
			</header>

			<main id="main" class="site-main px-2 py-8 mx-auto max-w-xl">
				<article class="entry">
					<header class="entry__header has-text-align-center mx-auto max-w-lg">
						{% block byline %}
						{% endblock byline %}

						{% block pageTitle %}
						{% endblock pageTitle %}
					</header>

					<div class="entry__content flow-spacing">
						{% block content %}
						{% endblock %}
					</div>
				</article>
				{% block comments %}
				{% endblock %}
			</main>

			<footer class="site-footer px-2 mx-auto max-w-xl py-4">
				{% include "components/nav-footer.njk" %}
			</footer>

			{% bundledJs %}
		</div>
	</body>
</html>
